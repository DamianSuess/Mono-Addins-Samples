<Addin
  id="ExternalStartupXmlAddin"
  namespace="TestApp"
  name="External Addin from XML"
  version="1.0">

  <!-- Name of our add-in DLL -->
  <Runtime>
    <Import Assembly="ExternalStartupXmlAddin.dll" />
  </Runtime>

  <!-- Our Add-in Host -->
  <Dependencies>
    <Addin id="TestApp" version="1.0" />
  </Dependencies>

  <!-- Built-in Add-ins -->
  <Extension path="/TestApp/StartupHandler">
    <!-- <StartupHandler type="ExternalStartupXmlAddin.HelloXML" /> -->
    <IStartupExtension type="ExternalStartupXmlAddin.HelloXML" />
  </Extension>
</Addin>