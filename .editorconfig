# Used by EditorConfig VS plugin - http://EditorConfig.org
# This file provides formatting rules for the project so you can
# keep your own personal defaults for others 
# 
# VS Plugin  https://visualstudiogallery.msdn.microsoft.com/c8bccfe2-650c-4b42-bc5c-845e21f96328
# Properties http://editorconfig.org/#supported-properties
# Source     https://github.com/editorconfig/editorconfig-visualstudio

# Top-most EditorConfig file
root = true

# All generic files should use MSDOS style endings, not Unix (lf)
[*]
end_of_line = crlf

# 2-column space/tab indentation
[*.cs]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# 2-column space/tab indentation
[*.{cpp,h}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.xml]
indent_style = space
indent_size = 2
